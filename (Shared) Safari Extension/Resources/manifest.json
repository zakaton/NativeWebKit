{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0",
    "homepage_url": "https://github.com/zakaton/nativewebkit",

    "icons": {
        "512": "images/icon-512.svg"
    },

    "background": {
        "service_worker": "background.js"
    },
    
    "web_accessible_resources": [{
        "resources": [""],
        "matches": ["<all_urls>"]
    }],

    "content_scripts": [{
        "js": [ "content.js" ],
        "matches": [ "<all_urls>" ],
        "runAt": "document_start"
    }],

    "action": {
        "default_popup": "popup.html"
    },
    
    "host_permissions": ["<all_urls>"],

    "permissions": ["activeTab", "scripting", "externally_connectable", "nativeMessaging", "host_permissions"]
}
